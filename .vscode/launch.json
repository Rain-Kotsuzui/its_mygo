{
    "configurations": [
        {
            "name": "run!",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/node_cpp/${fileBasenameNoExtension}",
            "args": [
                "ros2",
                "run",
                "node_cpp",
                "${fileBasenameNoExtension}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build and install!!!",
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true
            }
        }
    ]
}